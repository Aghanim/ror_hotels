%div.col-md-11
  %h3 Users
  %div.panel.panel-success
    %div.panel-heading
    %div.panel-body                
      %table.table.table-striped.table-bordered.table-condensed
        %tr
          %th.text-center
            %span.glyphicon.glyphicon-sort
            = sortable "id","btn btn-link"
          %th.text-center
            %span.glyphicon.glyphicon-sort
            = sortable "name", "btn btn-link"
          %th.text-center
            %span.glyphicon.glyphicon-sort
            = sortable "email", "btn btn-link"
          %th.text-center
            %span.glyphicon.glyphicon-sort
            = sortable "role","btn btn-link"
          %th.text-center
            %span.glyphicon.glyphicon-sort
            = sortable "votes","btn btn-link"
          %th.text-center
            %span.glyphicon.glyphicon-sort
            = sortable "comments","btn btn-link"
          %th.text-center
            %span.glyphicon.glyphicon-sort
            = sortable "hotels","btn btn-link"
          %th{colspan:3, class:"text-center"}Options
        %tr
          %td
          %td.text-right
            = render 'name_search_form'
          %td.text-right
            = render 'email_search_form'
          %td{colspan:4}
          %td{colspan:2}
            = link_to 'Reset filters', admin_users_path, {:class => 'btn btn-default'}
            %br
            = link_to 'Create user', new_user_registration_path, {:class => 'btn btn-default'}
        -@users.each do |user|
          %tr
            %td= user.id
            %td= user.name
            %td= user.email
            %td= user.getrole
            %td= user.votes.count
            %td= user.comments.count
            %td= user.hotels.count
            %td
              %span.glyphicon.glyphicon-pencil
              = link_to 'Edit', edit_admin_user_path(user)
            %td
              %span.glyphicon.glyphicon-trash
              = link_to 'Delete', admin_user_path(user),method: :delete, data: { confirm: '  Are you sure?' }
              
      = will_paginate @users
